//获取hostinfo, group列表
function getmonitor(){
    var group = "{{groupname}}";
    $.ajax({
        url:'/monitor_get_info/',
        type:'post',
        data:{groupname:group},
        success:function(data,status){
            if(data[0]){
                setTimeout(function(){alert(data[0]);},200);
            }
            var hostlist = data[1];
            var grouplist = data[2];
            fillhost(hostlist);
            fillgroup(grouplist);
        },
        error:function(xhr, errorInfo, errorThrown){
            console.log('http状态：'+xhr.status+'，状态描述：'+xhr.statusText+'，错误信息：'+errorInfo);
        }
    });
}
window.onload=getmonitor();

//切换显示用户组
function changemonitor(){
    var selectGroup=document.getElementById('group_choose').value;
    $.ajax({
        url:'/monitor_get_info/',
        type:'post',
        data:{groupname:selectGroup},
        success:function(data,status){
            if(data[0]){
                setTimeout(function(){alert(data[0]);},200);
            }
            var hostlist = data[1];
            //var grouplist = data[2];
            fillhost(hostlist);
            //fillgroup(grouplist);
        },
        error:function(xhr, errorInfo, errorThrown){
            console.log('http状态：'+xhr.status+'，状态描述：'+xhr.statusText+'，错误信息：'+errorInfo);
        }
    });
}

//填充host列表
function fillhost(hostlist){
    $('#hostlist tr').remove();
    if(hostlist.length){
        for(var i=0;i<hostlist.length;i++){
            var linecpu = ' ';
            var linemem = ' ';
            var linedisk = ' ';
            var linecpuio = ' ';
            var linenetin = ' ';
            var linenetout = ' ';
            var flagclick = ' ';
            if (hostlist[i].alarmcpu != '-') {
                if (parseFloat(hostlist[i].alarmcpu) > parseFloat(hostlist[i].linecpu)){
                    linecpu = ' class="danger text-danger"';
                }if(parseFloat(hostlist[i].alarmmem) > parseFloat(hostlist[i].linemem)){
                    linemem = ' class="danger text-danger"';
                }if(parseFloat(hostlist[i].alarmdisk) > parseFloat(hostlist[i].linedisk)){
                    linedisk = ' class="danger text-danger"';
                }if(parseFloat(hostlist[i].alarmcpuio) > parseFloat(hostlist[i].linecpuio)){
                    linecpuio = ' class="danger text-danger"';
                }if(parseFloat(hostlist[i].alarmnetin) > parseFloat(hostlist[i].linenetin)){
                    linenetin = ' class="danger text-danger"';
                }if(parseFloat(hostlist[i].alarmnetout) > parseFloat(hostlist[i].linenetout)){
                    linenetout = ' class="danger text-danger"';
                }
                flagclick = 'href="/monitor/?hostip='+hostlist[i].hostip+'&groupname='+hostlist[i].group
            }else {
                flagclick = 'href="javascript:return false;" style="opacity:0.3"'
            }
            
            var tr = $('<tr></tr>');

            var td = $('<td width="5%">'+hostlist[i].index
                        +'</td><td width="11%">'+hostlist[i].hostname
                        +'</td><td width="12%">'+hostlist[i].hostip
                        +'</td><td width="10%"'+linecpu+'>'+hostlist[i].alarmcpu
                        +'</td><td width="10%"'+linemem+'>'+hostlist[i].alarmmem
                        +'</td><td width="10%"'+linedisk+'>'+hostlist[i].alarmdisk
                        +'</td><td width="10%"'+linecpuio+'>'+hostlist[i].alarmcpuio
                        +'</td><td width="10%"'+linenetin+'>'+hostlist[i].alarmnetin
                        +'</td><td width="10%"'+linenetout+'>'+hostlist[i].alarmnetout
                        +'</td><td width="12%"><a '+flagclick+'">详情</a>');

            tr.append(td);
            $('#hostlist').append(tr);
        }
    }
    //定位页数
    var currentpage = parseInt($('.pagination a[href="#"]').text());
